public class Main {
    /*
    Steps:
    1. Base case: If n is 0, return 0
    2. Recursive case:
       - Get last digit (n % 10)
       - Add to sum of remaining digits (n / 10)
    */
    public static int sumDigits(int n) {
        if (n == 0) {           // Base case
            return 0;
        }
        return (n % 10) + sumDigits(n / 10); // Recursive call
    }

    public static void main(String[] args) {
        System.out.println(sumDigits(1234)); // Output: 10
    }
}
