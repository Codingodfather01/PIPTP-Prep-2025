public class Main {
    /*
    Steps:
    1. Base case: If n is 1, return 1
    2. Recursive case: Return n + sum of numbers from 1 to n-1
    */
    public static int sum(int n) {
        if (n == 1) {                 // Base case
            return 1;
        }
        return n + sum(n - 1);       // Recursive call
    }

    public static void main(String[] args) {
        System.out.println(sum(5));  // Output: 15
    }
}
